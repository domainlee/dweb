<style>
    .banner{
        padding: 0;
        position: relative;
        margin: 0;
    }
    .banner-story__content{
        position: absolute;
        top:35%;
        left: 0;
        right: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        -webkit-transition: all 1s ease;
        -moz-transition: all 1s ease;
        -o-transition: all 1s ease;
        transition: all 1s ease;
        max-width: 600px;
