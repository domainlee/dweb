        text-align: center;
    }
    .banner-story__title{
        color: #00284C;
        font-size: 50px;
    }
    .banner-story__image {
        position: relative;
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center bottom;
    }
    .banner-story__image:before {
        content: '';
        display: block;
        padding-top: 75%;
    }
    .breadcrumb{
        margin: 0 0;
        padding: 0 0;
        background: none;
        border-radius: 0;
        z-index: 2;
    }
    .breadcrumb li a{
        color: #fff;
    }
    .breadcrumb>li+li:before {
        display: inline-block;
        font-size: 16px;
        font-family: 'simple-line-icons';
        content: "/";
        line-height: 25px;
        padding: 0 2px;
        color: #FFF;
    }
    .story {
        position: relative;
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        padding: 120px 0;
    }
    .story__box{
        margin: 0 auto;
        max-width: 600px;
        padding: 30px;
        background: #fff;
        position: relative;
        z-index: 3;
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }
    .story__title{
        color: #464646;
        font-weight: 600;
        margin: 15px 0;
        font-size: 30px;
    }
    .story__sub-title{
        letter-spacing: 5px;
        font-size: 16px;
        color: #464646;
        text-transform: uppercase;
    }
    .story__intro{
        color: #464646;
        font-weight: 600;
        margin: 0 0 30px;
    }
    .story__content{
        color: #636363;
    }
    .story__signature{
        display: flex;
        justify-content: right;
    }
    .story-intro{
        height: 500px;
        background-repeat: no-repeat;
        position: relative;
    }

    .story-intro__inner{
        display: flex;
        position: relative;
    }
    .story-intro__left{
        width: 50%;
        position: absolute;
        left:0;
        top:-300px;
        z-index: 4;
        padding-right: 30px;
    }
    .story-intro__right{
        width: 50%;
        right: 0;
        top: -300px;
        position: absolute;
        z-index: 2;
        padding-left: 30px;
    }
    .story-intro__title{
        color: #00284C;
        margin: 30px 0 0;
        text-transform: uppercase;
    }
    .story-intro__left span{
        color: #00284C;
        font-weight: 600;
        font-size: 30px;
        text-transform: uppercase;
    }
    .story-intro__intro{
        color: #666;
        line-height: 26px;
        margin-top: 30px;
    }
    .story-intro__image {
        z-index: 3;
        position: relative;
        background-size: cover;
        background-repeat: no-repeat;
    }
    .story-intro__image:before {
        content: '';
        padding-top: 100%;
        display: block;
    }
    @media only screen and (min-width:300px) and (max-width: 640px) {
        .story-intro__left{
            width: 100%;
            position: relative;
            padding: 0 0 30px;
            top:0;
        }
        .story-intro__right{
            width: 80%;
            top:30px;
        }
        .story-intro{
            height: auto;
        }
        .story__box{
            max-width:300px;
        }
        .story{
            padding: 30px 0;
        }
    }
    @media only screen and (min-width:1300px){
        .container{
            width: 1170px;
        }
    }
</style>

